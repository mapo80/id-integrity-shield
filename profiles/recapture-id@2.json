{
  "profile_id": "recapture-id@2",
  "purpose": "Recapture/scan of printed IDs and documents (smartphone photo or flatbed scan).",
  "input": { "max_side": 1600, "normalize": true },
  "checks": {
    "mantranet":    { "enabled": true,  "weight": 0.50, "threshold": 0.55 },
    "jpeg_ghost":   { "enabled": true,  "weight": 0.20, "threshold": 0.58 },
    "ela":          { "enabled": true,  "weight": 0.20, "threshold": 0.60 },
    "blockiness":   { "enabled": true,  "weight": 0.07, "threshold": 0.60 },
    "noiseprintpp": { "enabled": true,  "weight": 0.03, "threshold": 0.65 }
  },
  "aggregation": { "type": "weighted_sum", "bias": 0.0, "scale": 1.0 },
  "decision": { "metric": "tamper_score", "threshold": 0.62, "policy": "score" },
  "artifacts": { "save_overlay": true, "save_heatmap": true },
  "concurrency": {
    "max_parallel_images": 2,
    "parallel_signal_checks": true,
    "onnx_intra_threads": 2,
    "onnx_inter_threads": 1
  }
}
